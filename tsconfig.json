{
  "compilerOptions": {
    "baseUrl": "src",
    "noImplicitAny": true,
    "strict": true,
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "Node",
    "types": [
      "node",
      "webdriverio/async"
    ],
    "outDir": "build",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "src/**/*.ts",
    "typings/*"
  ],
  "exclude": [
    "/node_modules/"
  ]
}