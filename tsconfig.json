{
  "compilerOptions": {
    "baseUrl": "src",
    "noImplicitAny": true,
    "strict": true,
    "module": "CommonJS",
    "target": "es6",
    "moduleResolution": "Node",
    "types": [
      "node",
      "@wdio/globals/types",
      "@wdio/cucumber-framework"
    ],
    "outDir": "build",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true
  },
  "include": [
    "typings/*.d.ts",
    "src/**/*.ts"
  ],
  "exclude": [
    "/node_modules/"
  ]
}